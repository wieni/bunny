{# @var block \Drupal\wmcustom\Entity\Model\ContentBlock\Attachment #}

{% for attachment in block.attachments %}
	{% set text = attachment.label ? attachment.label : attachment.file.filename %}
	{% include "@components/attachment/attachment.html.twig" with {
      url: attachment.file|downloadUrl,
      text: text,
      meta: attachment.file|file_extension|upper ~ ' - ' ~ attachment.file.size|format_bytes,
      extension: attachment.file|file_extension|upper,
    } only %}
{% endfor %}
